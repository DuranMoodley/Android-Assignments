<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_play"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="catchdot.live.com.catchthedot.GamePlay"
    tools:showIn="@layout/activity_game_play">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="515dp"
        android:id="@+id/svgame"
        android:layout_gravity="center" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crmGameTimer"
        android:layout_gravity="center_horizontal|top"
        android:textSize="20sp"
        android:textIsSelectable="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvScore"
        android:layout_gravity="start|top"
        android:text="@string/score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvTargetNumber"
        android:layout_gravity="end|top"
        android:text="@string/target_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/drag_your_finger_to_play"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>
