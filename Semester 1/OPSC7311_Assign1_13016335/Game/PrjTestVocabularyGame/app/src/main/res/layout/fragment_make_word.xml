<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.duran.prjtestvocabularygame.FragmentMakeWord">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/lstWords"
            android:layout_weight="1"/>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prb"
            android:layout_column="1"
            android:indeterminate="false"
            android:visibility="invisible" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:id="@+id/edtWord"
            android:layout_weight="1"
            android:focusable="false"
            android:hint="@string/title_word"
            android:textSize="25sp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:text="@string/title_add_word"
            android:id="@+id/btnAddWord"
            android:layout_column="1"
            android:textSize="18sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chFragment"
            android:layout_column="1"
            android:visibility="invisible" />
    </TableRow>

</TableLayout>
